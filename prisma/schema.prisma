generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type Profile {
  firstName String
  lastName  String
}

model User {
  id              String            @id @default(auto()) @map("_id") @db.ObjectId
  email           String @unique
  password        String
  phone_number    String?
  created_at      DateTime         @default(now()) @db.Date
  updated_at      DateTime         @updatedAt @db.Date
  profile          Profile
}
